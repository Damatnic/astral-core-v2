# CoreV2 Mental Health Platform - Production Environment
# Netlify Deployment Configuration

# Environment
NODE_ENV=production

# Neon Database Configuration
DATABASE_URL=postgresql://neondb_owner:npg_IrC1uWYi3FdA@ep-floral-lake-aeiztgic-pooler.c-2.us-east-2.aws.neon.tech/neondb?sslmode=require&channel_binding=require

# API Configuration (Netlify Functions)
VITE_API_URL=/.netlify/functions
VITE_API_BASE_URL=/.netlify/functions

# Feature Flags (Safe defaults for local testing)
VITE_ENABLE_AI_CHAT=true
VITE_ENABLE_VIDEO_CHAT=false
VITE_ENABLE_PUSH_NOTIFICATIONS=false
VITE_ENABLE_OFFLINE_MODE=true

# Development Settings (Disabled in production)
VITE_DEBUG_MODE=false
VITE_SHOW_DEV_TOOLS=false

# Crisis Resources (Essential for mental health app)
VITE_CRISIS_HOTLINE=988
VITE_CRISIS_TEXT_LINE=741741

# PWA Configuration
VITE_PWA_NAME=Astral Core - Mental Health Support
VITE_PWA_SHORT_NAME=Astral Core
VITE_PWA_THEME_COLOR=#4A90E2
VITE_PWA_BACKGROUND_COLOR=#ffffff

# Service Worker Configuration
VITE_SW_UPDATE_INTERVAL=60000
VITE_SW_CACHE_NAME=astral-core
VITE_SW_ENABLE_BACKGROUND_SYNC=true
VITE_SW_ENABLE_PUSH_SYNC=false

# Offline Configuration
VITE_OFFLINE_FALLBACK_PAGE=/offline.html
VITE_OFFLINE_CRISIS_PAGE=/offline-crisis.html
VITE_ENABLE_OFFLINE_ANALYTICS=true

# Authentication Configuration (Optional - Login not required)
VITE_AUTH_OPTIONAL=true
VITE_ALLOW_ANONYMOUS=true

# Optional services (commented out for local testing)
# VITE_AUTH0_DOMAIN=your-auth0-domain.auth0.com
# VITE_AUTH0_CLIENT_ID=your-auth0-client-id
# VITE_VAPID_PUBLIC_KEY=your-vapid-public-key
# VITE_SENTRY_DSN=your-sentry-dsn
# VITE_GA_TRACKING_ID=your-google-analytics-id

# App Version
VITE_APP_VERSION=1.0.0