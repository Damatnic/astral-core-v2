# Astral Core V4 Environment Variables
# Copy this file to .env.local and configure your values

# ==================================================
# CORE APPLICATION SETTINGS
# ==================================================
NODE_ENV=development
VITE_APP_NAME="Astral Core V4"
VITE_APP_VERSION="4.0.0"
VITE_APP_DESCRIPTION="Mental Health Support Platform"

# ==================================================
# SERVER CONFIGURATION
# ==================================================
VITE_API_BASE_URL=http://localhost:3847/api
VITE_WEBSOCKET_URL=ws://localhost:3847/ws
VITE_SERVER_PORT=3847
VITE_SERVER_HOST=localhost

# ==================================================
# SUPABASE CONFIGURATION (Optional - for data persistence)
# ==================================================
# Leave these commented out for anonymous/offline-first operation
# VITE_SUPABASE_URL=your_supabase_url_here
# VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
# VITE_SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ==================================================
# AUTHENTICATION (Optional - Auth0)
# ==================================================
# Anonymous Access Configuration
VITE_AUTH_OPTIONAL=true
VITE_ALLOW_ANONYMOUS=true
VITE_ENABLE_ANONYMOUS_CHAT=true
VITE_ANONYMOUS_USER_PREFIX=Guest

# Auth0 Configuration (Optional - only if authentication is needed)
# VITE_AUTH0_DOMAIN=your_auth0_domain_here
# VITE_AUTH0_CLIENT_ID=your_auth0_client_id_here
# VITE_AUTH0_CLIENT_SECRET=your_auth0_client_secret_here
# VITE_AUTH0_CALLBACK_URL=http://localhost:5173/auth/callback
# VITE_AUTH0_AUDIENCE=your_auth0_audience_here

# ==================================================
# CRISIS SUPPORT CONFIGURATION
# ==================================================
VITE_CRISIS_HOTLINE=988
VITE_CRISIS_TEXT_LINE=741741
VITE_CRISIS_CHAT_URL=https://suicidepreventionlifeline.org/chat/
VITE_EMERGENCY_SERVICES=911

# Crisis Detection Settings
VITE_ENABLE_CRISIS_DETECTION=true
VITE_CRISIS_DETECTION_SENSITIVITY=medium
VITE_AUTO_ESCALATE_CRITICAL=true
VITE_CRISIS_RESPONSE_TIMEOUT=30000

# ==================================================
# ARTIFICIAL INTELLIGENCE SERVICES (Optional)
# ==================================================
# AI features work without API key using basic responses
VITE_ENABLE_AI_CHAT=true
# VITE_OPENAI_API_KEY=your_openai_api_key_here
VITE_AI_MODEL=gpt-4
VITE_AI_MAX_TOKENS=2048
VITE_AI_TEMPERATURE=0.7

# Therapeutic AI Settings
VITE_ENABLE_THERAPEUTIC_AI=true
VITE_AI_SAFETY_FILTER=true
VITE_AI_CRISIS_ESCALATION=true

# ==================================================
# FEATURE FLAGS
# ==================================================
# Core Features
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_ACCESSIBILITY=true

# Wellness Features
VITE_ENABLE_MOOD_TRACKING=true
VITE_ENABLE_JOURNAL=true
VITE_ENABLE_HABIT_TRACKING=true
VITE_ENABLE_MEDITATION=true
VITE_ENABLE_BREATHING_EXERCISES=true

# Community Features
VITE_ENABLE_PEER_SUPPORT=true
VITE_ENABLE_GROUP_CHAT=false

# ==================================================
# PWA CONFIGURATION
# ==================================================
VITE_PWA_NAME="Astral Core - Mental Health Support"
VITE_PWA_SHORT_NAME="Astral Core"
VITE_PWA_DESCRIPTION="Your personal mental health support platform"
VITE_PWA_THEME_COLOR=#667eea
VITE_PWA_BACKGROUND_COLOR=#ffffff
VITE_PWA_DISPLAY=standalone
VITE_PWA_ORIENTATION=portrait

# ==================================================
# SECURITY SETTINGS (Optional - for backend)
# ==================================================
# JWT Configuration (Backend - not needed for anonymous access)
# JWT_SECRET=your_super_secure_jwt_secret_here_min_32_chars
# JWT_ALGORITHM=HS256
# JWT_EXPIRES_IN=1h
# JWT_REFRESH_EXPIRES_IN=7d

# Session Management (not needed for anonymous access)
# SESSION_SECRET=your_super_secure_session_secret_here_min_32_chars
# SESSION_NAME=astral_session
# SESSION_MAX_AGE=86400000

# ==================================================
# DEVELOPMENT SETTINGS
# ==================================================
VITE_DEBUG_MODE=false
VITE_SHOW_DEV_TOOLS=false
VITE_MOCK_API=true
VITE_BYPASS_AUTH=true

# ==================================================
# ANALYTICS & MONITORING (Optional)
# ==================================================
VITE_ENABLE_ANALYTICS=false
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX
# VITE_SENTRY_DSN=your_sentry_dsn_here

# Performance Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_PERFORMANCE_SAMPLE_RATE=0.1
VITE_ERROR_REPORTING=true