{
  "name": "Astral Core - Mental Health Support",
  "short_name": "Astral Core",
  "description": "Anonymous peer-to-peer mental health support platform with offline crisis resources",
  "start_url": "/",
  "display": "standalone",
  "theme_color": "#667eea",
  "background_color": "#ffffff",
  "orientation": "portrait",
  "scope": "/",
  "icons": [
    {
      "src": "/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icon.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any"
    }
  ],
  "categories": ["health", "medical", "lifestyle", "productivity", "social"],
  "shortcuts": [
    {
      "name": "Crisis Support",
      "short_name": "Crisis",
      "description": "Immediate access to crisis resources and emergency support",
      "url": "/crisis",
      "icons": [{ 
        "src": "/icon.svg", 
        "sizes": "96x96", 
        "type": "image/svg+xml",
        "purpose": "any"
      }]
    },
    {
      "name": "Emergency Help",
      "short_name": "Emergency",
      "description": "Quick access to emergency contacts and crisis intervention",
      "url": "/crisis?emergency=true",
      "icons": [{ 
        "src": "/icon.svg", 
        "sizes": "96x96", 
        "type": "image/svg+xml",
        "purpose": "any"
      }]
    },
    {
      "name": "AI Therapist",
      "short_name": "AI Chat",
      "description": "Chat with AI therapist for immediate support",
      "url": "/ai-chat",
      "icons": [{ 
        "src": "/icon.svg", 
        "sizes": "96x96", 
        "type": "image/svg+xml",
        "purpose": "any"
      }]
    },
    {
      "name": "Safety Plan",
      "short_name": "Safety",
      "description": "Access your personalized safety plan",
      "url": "/safety-plan",
      "icons": [{ 
        "src": "/icon.svg", 
        "sizes": "96x96", 
        "type": "image/svg+xml",
        "purpose": "any"
      }]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshot-1.png",
      "sizes": "1280x720",
      "type": "image/png"
    },
    {
      "src": "/screenshot-2.png",
      "sizes": "1280x720",
      "type": "image/png"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+astralcore",
      "url": "/?handler=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/safety-plan",
      "accept": {
        "text/plain": [".txt"],
        "application/json": [".json"]
      }
    }
  ],
  "handle_links": "preferred",
  "capture_links": "new-client",
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
  "lang": "en",
  "dir": "ltr",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui", "browser"],
  "id": "/astral-core",
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  }
}