# CoreV2 Development Environment Configuration
# This file contains development-specific security and configuration settings

# Environment
NODE_ENV=development

# Server Configuration
VITE_API_BASE_URL=http://localhost:3000/api
VITE_WEBSOCKET_URL=ws://localhost:3000
PORT=3000
HOST=localhost

# Security - JWT & Session
JWT_SECRET=dev-jwt-secret-change-in-production-minimum-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
SESSION_SECRET=dev-session-secret-change-in-production-minimum-32-chars
SESSION_NAME=corev2.dev.sid
SESSION_MAX_AGE=86400000

# Security - Encryption Keys (Development)
ENCRYPTION_KEY=dev-encryption-key-32-characters-exactly-change!!
ENCRYPTION_IV=dev-iv-16-chars!
CRYPTO_ALGORITHM=aes-256-gcm
KEY_ROTATION_DAYS=30

# Security - CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173,http://127.0.0.1:3000
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# Security - Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=10000
RATE_LIMIT_AUTH_MAX=50
RATE_LIMIT_CRISIS_MAX=1000
RATE_LIMIT_SKIP_SUCCESSFUL=false

# Security - CSP
CSP_REPORT_ONLY=true
CSP_REPORT_URI=/api/security/csp-report
CSP_ENABLE_UNSAFE_EVAL=true
CSP_ENABLE_UNSAFE_INLINE=true
CSP_NONCE_ENABLED=false

# Security Headers
HSTS_ENABLED=false
HSTS_MAX_AGE=0
X_FRAME_OPTIONS=SAMEORIGIN
X_CONTENT_TYPE_OPTIONS=nosniff
REFERRER_POLICY=strict-origin-when-cross-origin
PERMISSIONS_POLICY_ENABLED=true

# Auth0 Configuration (Development)
VITE_AUTH0_DOMAIN=dev-corev2.us.auth0.com
VITE_AUTH0_CLIENT_ID=dev-client-id
VITE_AUTH0_CLIENT_SECRET=dev-client-secret
VITE_AUTH0_CALLBACK_URL=http://localhost:5173/callback
VITE_AUTH0_AUDIENCE=http://localhost:3000/api

# Database Configuration
DATABASE_URL=postgresql://corev2_dev:devpassword@localhost:5432/corev2_development
DATABASE_SSL=false
DATABASE_POOL_SIZE=10
DATABASE_CONNECTION_TIMEOUT=30000

# Redis/Cache Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=3600

# Logging & Monitoring
LOG_LEVEL=debug
LOG_FORMAT=dev
LOG_ALL_REQUESTS=true
LOG_AUTH_EVENTS=true
LOG_DATA_ACCESS=true
LOG_SECURITY_EVENTS=true
LOG_PERFORMANCE=true
LOG_RETENTION_DAYS=7

# Audit & Compliance
AUDIT_ENABLED=true
AUDIT_LOG_PATH=./logs/audit
COMPLIANCE_REPORTING=false
DATA_RETENTION_DAYS=90

# Threat Detection
THREAT_DETECTION_ENABLED=false
SQL_INJECTION_PROTECTION=true
XSS_PROTECTION=true
BRUTE_FORCE_PROTECTION=false
ANOMALY_DETECTION=false
GEO_BLOCKING=

# Crisis Detection
CRISIS_DETECTION_ENABLED=true
CRISIS_OVERRIDE_ENABLED=true
CRISIS_HOTLINE=988
CRISIS_TEXT_LINE=741741
CRISIS_ALERT_WEBHOOK=http://localhost:3000/api/crisis/alert

# Feature Flags
VITE_ENABLE_AI_CHAT=true
VITE_ENABLE_VIDEO_CHAT=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_TWO_FACTOR=false
VITE_ENABLE_DEVICE_FINGERPRINTING=false

# Development Tools
VITE_DEBUG_MODE=true
VITE_SHOW_DEV_TOOLS=true
ENABLE_HOT_RELOAD=true
ENABLE_SOURCE_MAPS=true
ENABLE_API_DOCS=true
SWAGGER_ENABLED=true

# Email Configuration (Development - MailTrap)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_SECURE=false
SMTP_USER=dev-user
SMTP_PASS=dev-pass
EMAIL_FROM=noreply@dev.corev2.local

# Push Notifications (Development)
VITE_VAPID_PUBLIC_KEY=dev-vapid-public-key
VITE_VAPID_PRIVATE_KEY=dev-vapid-private-key
PUSH_NOTIFICATION_ENABLED=false

# External Services (Development/Sandbox)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
GA_TRACKING_ID=
STRIPE_SECRET_KEY=sk_test_
STRIPE_WEBHOOK_SECRET=whsec_test_

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_PATH=./uploads/dev

# API Keys (Development)
API_KEY_REQUIRED=false
API_KEY_HEADER=X-API-Key
INTERNAL_API_KEY=dev-internal-api-key

# Testing
TEST_MODE=true
MOCK_EXTERNAL_SERVICES=true
SEED_DATABASE=true

# PWA Configuration
VITE_PWA_NAME=CoreV2 Dev - Mental Health Support
VITE_PWA_SHORT_NAME=CoreV2 Dev
VITE_PWA_THEME_COLOR=#667eea
VITE_PWA_BACKGROUND_COLOR=#ffffff
VITE_PWA_DISPLAY=standalone
VITE_PWA_ORIENTATION=portrait

# Service Worker
VITE_SW_UPDATE_INTERVAL=10000
VITE_SW_CACHE_NAME=corev2-dev
VITE_SW_ENABLE_BACKGROUND_SYNC=true
VITE_SW_ENABLE_PUSH_SYNC=false

# Privacy Settings
DATA_MINIMIZATION=true
RIGHT_TO_FORGETTING=true
CONSENT_MANAGEMENT=true
ANONYMIZATION=true
PSEUDONYMIZATION=false